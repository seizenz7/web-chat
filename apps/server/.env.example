# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pern_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pern_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
NODE_ENV=development
SERVER_PORT=5000
SERVER_HOST=localhost

# Logging
LOG_LEVEL=debug

# Session/Auth
SESSION_SECRET=your-secret-key-change-in-production

# Backwards-compatible JWT secret (used as default for both access + refresh secrets)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRY=24h

# Recommended: split access vs refresh secrets
JWT_ACCESS_SECRET=your-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production

# JWT lifetimes
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Refresh token cookie name
REFRESH_COOKIE_NAME=refresh_token

# Encrypt secrets-at-rest (e.g. TOTP seeds)
TOTP_ENCRYPTION_KEY=your-totp-encryption-key-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Email Configuration (for Bull jobs example)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-user
SMTP_PASS=your-password
