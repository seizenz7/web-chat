{
  "name": "pern-monorepo",
  "version": "1.0.0",
  "description": "A production-ready PERN stack monorepo with Express, React, and PostgreSQL",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @pern/server dev\" \"yarn workspace @pern/client dev\"",
    "dev:server": "yarn workspace @pern/server dev",
    "dev:client": "yarn workspace @pern/client dev",
    "build": "yarn workspace @pern/server build && yarn workspace @pern/client build",
    "build:server": "yarn workspace @pern/server build",
    "build:client": "yarn workspace @pern/client build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "type-check": "yarn workspace @pern/server exec tsc --noEmit && yarn workspace @pern/client exec tsc --noEmit",
    "test": "echo \"Tests not configured yet\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "bash setup.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pg-hstore": "^2.3.4",
    "prettier": "^3.1.0",
    "sequelize-cli": "^6.6.3",
    "typescript": "^5.3.3"
  }
}
